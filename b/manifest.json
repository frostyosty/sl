{
  "manifest_version": 3,
  "name": "Blurt",
  "version": "1.0",
  "description": "A simple commenting system for any webpage",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "exclude_matches": [
        "https://chrome.google.com/*"
      ]
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}
